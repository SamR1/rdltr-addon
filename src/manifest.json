{
  "name": "rdltr",
  "description": "web extension for rdltr (read-it-later app)",
  "author": "SamR1",
  "homepage_url": "https://github.com/SamR1/rdltr-extension",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "rdltr-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["*://*/", "activeTab", "storage"],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
